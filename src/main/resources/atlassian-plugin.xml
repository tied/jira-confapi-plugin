<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/aservo.png</param>
        <param name="plugin-logo">images/aservo.png</param>
        <param name="atlassian-licensing-enabled">true</param>
    </plugin-info>

    <resource type="i18n" name="i18n" location="aservo-jira-confapi"/>

    <web-resource key="aservo-confapi-jira-web-resource" name="ConfAPI Web Resource">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <dependency>com.atlassian.auiplugin:aui-experimental-expander</dependency>
        <resource type="download" name="images/" location="/images"/>
        <context>atl.general</context>
    </web-resource>

    <rest key="aservo-confapi-rest" name="ConfAPI REST" path="/confapi" version="1"/>

    <servlet key="aservo-confapi-jira-license-servlet" name="ConfAPI License Servlet"
            class="de.aservo.atlassian.jira.confapi.servlet.LicenseServlet">
        <description>The License Servlet Plugin</description>
        <url-pattern>/de.aservo.atlassian.jira-confapi-plugin/license</url-pattern>
    </servlet>

</atlassian-plugin>
